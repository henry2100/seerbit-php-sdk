{
  "name": "seerbit/seerbit-php",
  "description": "The Official SeerBit PHP Library for API Integration",
  "version": "1.0.0",
  "keywords": ["seerbit", "payment","api"],
  "homepage": "https://seerbit.com",
  "license": ["MIT"],
  "authors": [{
    "name": "Victor Ighalo",
    "email": "victorighalo@gmail.com",
    "role": "Developer"
  }],
  "require": {
    "php" : ">=5.5.0",
    "guzzlehttp/guzzle": "~6.0",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "monolog/monolog": "^1.25",
    "phpunit/phpunit": "^5.7",
    "php-coveralls/php-coveralls": "^2.1",
    "squizlabs/php_codesniffer": "^3.3",
    "symfony/process": "~3.4"
  },
  "autoload": {
    "psr-4": {"Seerbit\\": "src/Seerbit"}
  },
  "autoload-dev": {
    "psr-4": {
      "Seerbit\\": [
        "tests/",
        "tests/Seerbit/"
      ]
    }
  }
}
